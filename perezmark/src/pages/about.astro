---
import MainLayout from "../layouts/MainLayout.astro";
const targetDate = new Date('2024-12-31T00:00:00'); // Ensure the time is also specified
---

<MainLayout
  title="Mark Perez's About" 
  seoTitle="About Mark Perez, DevOps Engineer" 
  seoDesc="Hi there! My name is Mark Perez, and I'm a DevOps engineer with over 5 years of experience. I'm passionate about building and automating efficient, scalable, and reliable software delivery pipelines."
>
  <div class="flex flex-col items-center justify-center min-h-screen">
    <h1 class="text-4xl font-bold mb-4 text-center text-white">Under Construction</h1> 
    <p class="text-lg text-gray-300 mb-8 text-center">This page is currently being built. We're launching soon!</p> 

    {/* Countdown Timer */}
    <div class="flex space-x-4 text-4xl font-bold text-gray-200"> 
      <div id="days" class="flex flex-col items-center">
        <span>00</span>
        <span class="text-sm text-gray-400">Days</span> 
      </div>
      <div id="hours" class="flex flex-col items-center">
        <span>00</span>
        <span class="text-sm text-gray-400">Hours</span> 
      </div>
      <div id="minutes" class="flex flex-col items-center">
        <span>00</span>
        <span class="text-sm text-gray-400">Minutes</span> 
      </div>
      <div id="seconds" class="flex flex-col items-center">
        <span>00</span>
        <span class="text-sm text-gray-400">Seconds</span> 
      </div>
    </div>

    <script is:inline>
      const targetDate = new Date('2024-12-31T00:00:00'); // Correctly set the target date

      function updateCountdown() {
        const currentDate = new Date();
        const timeRemaining = targetDate - currentDate;

        const days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
        const hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

        document.getElementById('days').querySelector('span:first-child').textContent = String(days).padStart(2, '0');
        document.getElementById('hours').querySelector('span:first-child').textContent = String(hours).padStart(2, '0');
        document.getElementById('minutes').querySelector('span:first-child').textContent = String(minutes).padStart(2, '0');
        document.getElementById('seconds').querySelector('span:first-child').textContent = String(seconds).padStart(2, '0');
      }

      updateCountdown();
      setInterval(updateCountdown, 1000);
    </script>
  </div>
</MainLayout>